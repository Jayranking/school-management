<!doctype html>
<html lang="en" data-bs-theme="auto">
  <head>
    <title>Dashboard</title>
    <%- include('./snippet/header.ejs') %>
  </head>
  <body>
  
    <%- include('./snippet/navbar.ejs') %>

    <div class="container-fluid">
      <div class="row">
        <%- include('./snippet/sidebar.ejs') %>


        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="container mt-5">
                <div class="col-md-10 mx-auto">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="mb-4 text-center">Create Memo</h5>
                            <form id="memoForm">
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" name="memoTitle" placeholder="Enter title">
                                    <div class="memoTitleErr text-center text-danger"></div>
                                </div>
                        
                                <div class="form-group mb-3">
                                     <input type="text" class="form-control" name="memoRef" placeholder="Enter reference">
                                     <div class="memoRefErr text-center text-danger"></div>
                                </div>
                        
                                <div class="form-group">
                                    <textarea class="form-control" name="memoBody" rows="8" placeholder="Enter memo content"></textarea>
                                    <div class="memoBodyErr text-center text-danger"></div>
                                </div>
                        
                                <!-- Submit Button -->
                                 <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-outline-primary">Submit</button>
                                 </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
      </div>
    </div>



    <%- include('./snippet/scripts.ejs') %>
    <script src="/js/memo.js"></script>
    </body>
</html>
